\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{bootstrapcards}[2023/08/13 Bootstrapcards]

\RequirePackage[most]{tcolorbox}
\RequirePackage{bootstrapcolors}
\RequirePackage{ifthen}
\RequirePackage{tikz}
\RequirePackage{hyperref}
\hypersetup{
    colorlinks=true,
    linkcolor=white,
    filecolor=magenta,      
    urlcolor=white,
}


\newenvironment{card}[6]
    {
        \begin{center}
        \begin{tcolorbox}[
            title filled=false,
            boxrule=0.5pt,
            width=7cm,
            colback=white,
            colframe=gray-500]
        \begin{center}
            \ifthenelse{\equal{#1}{false}}{}{\includegraphics[width=5cm]{#1}} 
        \end{center}

        {\large \textbf{#2}}

        {\small \color{gray-600} \textbf{#3}} \vspace*{2mm}
        \begin{flushleft}
            #4
        \end{flushleft} \vspace*{5mm}

        \begin{tikzpicture}
            \node[draw=white, 
            text=white, 
            fill=primary,
            rounded corners=1.5mm,
            minimum height=9mm,
            minimum width=35mm] { \href{#5}{#6}};
        \end{tikzpicture}
    }
    {
        \end{tcolorbox}
        \end{center}
    }