\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{bootstrapcards}[2023/08/13 Bootstrapcards]

\RequirePackage[most]{tcolorbox}
\RequirePackage{bootstrapcolors}
\RequirePackage{tikz}
\RequirePackage{hyperref}
\hypersetup{
    colorlinks=true,
    linkcolor=white,
    filecolor=magenta,      
    urlcolor=white,
}


\newenvironment{card}[5]
    {
        \begin{center}
        \begin{tcolorbox}[
            title filled=false,
            boxrule=0.5pt,
            width=7cm,
            colback=white,
            colframe=gray-500]
        \begin{center}
            \includegraphics[width=5cm]{#1}
        \end{center}

        {\large \textbf{#2}} \vspace*{4mm}
        \begin{flushleft}
            #3
        \end{flushleft} \vspace*{5mm}

        \begin{tikzpicture}
            \node[draw=white, 
            text=white, 
            fill=primary,
            rounded corners=1.5mm,
            minimum height=9mm,
            minimum width=35mm] { \href{#4}{#5}};
        \end{tikzpicture}
    }
    {
        \end{tcolorbox}
        \end{center}
    }