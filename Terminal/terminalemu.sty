\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{terminalemu}[2023/09/21 Terminal-Emulator]

\RequirePackage[most]{tcolorbox}
\RequirePackage{bootstrapcolors}
\RequirePackage{ifthen}

\newenvironment{terminal}[2]
    {
        \begin{tcolorbox}[
            center title, 
            title filled=true,
            boxrule=0.5pt,
            width=11cm,
            colbacktitle=gray-700,
            coltitle=gray-300,
            colback=purple-700,
            colframe=gray-700,
            arc=1mm,
            boxrule=2pt,
            title=#1]
    }
    {
        \end{tcolorbox}
    }