\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{bootstraptoasts}[2023/08/14 Bootstraptoasts]

\RequirePackage[most]{tcolorbox}
\RequirePackage{bootstrapcolors}
\RequirePackage{ifthen}
\RequirePackage{fontawesome}
\RequirePackage{tikz}
\RequirePackage{hyperref}
\hypersetup{
    colorlinks=true,
    linkcolor=white,
    filecolor=magenta,      
    urlcolor=white,
}


\newenvironment{toast}[4]
    {
        \begin{tcolorbox}[
            title filled=true,
            boxrule=0.5pt,
            width=9cm,
            colbacktitle=white,
            coltitle=gray-700,
            colback=white,
            colframe=gray-500,
            title=\ifthenelse{\equal{#1}{false}}{}{\ifthenelse{\equal{#1}{pic}}{\includegraphics[width=1cm]{#1}}{\begin{tikzpicture}\node[draw=white, 
                text=white,fill=#1,rounded corners=1mm,minimum height=2mm,minimum width=2mm] {};\end{tikzpicture}}}
            \ifthenelse{\equal{#2}{false}}{}{{\large \textbf{#2}}} 
                \hfill
                \ifthenelse{\equal{#3}{false}}{}{{\small \color{gray-600} #3}}
                {\Large \color{gray-500} \faClose}]
        \ifthenelse{\equal{#4}{false}}{}{\begin{flushleft}
            #4
        \end{flushleft}}
    }
    {
        \end{tcolorbox}
    }